{
	"name": "celestria",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint --fix",
		"format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "npm@10.9.0",
	"dependencies": {
		"autoprefixer": "^10.4.20",
		"next": "15.1.5",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@types/node": "^22.10.7",
		"@types/react": "^19.0.7",
		"@types/react-dom": "^19.0.3",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.18.0",
		"eslint-config-next": "15.1.5",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.1",
		"postcss": "^8.5.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.3"
	}
}
